// Основа
body
    font-family 'oswald'
    font-size 16px
    line-height 1.5
    color #4f5159
// Настройка ссылки
a
    color inherit
    text-decoration none

    &.underline
        text-decoration underline
        &:hover
            text-decoration none

    &.hover-underline
        &:hover
            text-decoration underline

// Выделение текста
::-moz-selection
    text-shadow none
    background-color blue
    color #fff

::selection
    text-shadow none
    background-color blue
    color #fff

// Страница и прижатие футера
// Наследуемся именно через ".cssall", так как в IE присутствуют баги при рендеринге флексбоксов
.page
    min-height 100%
    .cssall &
        display flex
        flex-direction column
    &__main
    &__inner
        .cssall &
            flex-grow 1
    &__title
        font-size 40px
    &__title:first-letter
        text-transform uppercase // Первая букава всегда заглавная

.page
.inner
    &__wrapper
        display flex
        flex-wrap nowrap
    &__left
        padding 0 10px 0 0
        width 100%
        max-width 66.66%
    &__right
        padding 0 0 0 10px
        width 100%
        max-width 33.33%

// Адаптивная обёртка
.wrapper
    // outline 1px solid red
    clearfix()
    margin auto
    padding 0 10px
    width 100%
    max-width $desktop
    +below($desktop)
        width $tablet
    +below($tablet)
        max-width 360px
        min-width $mobile
        width 100%
