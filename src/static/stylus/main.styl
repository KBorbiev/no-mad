.about-kyrgyzstan
    background url('../img/kyrgyzstan.jpg') 50% no-repeat
    background-size cover
    object-fit cover
    min-height 520px
    max-height 650px
    margin-bottom 50px
    position relative
    &__info-box
        padding-top 45px
        color $white
    &__title
        text-transform uppercase
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        letter-spacing .5em
        +below($desktop)
            letter-spacing normal
    &__info
        font-size 16px
        text-align center
    &__open
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        font-family "oswald"
        outline 0
        border 0
        cursor pointer
        background-color $yellow
        font-size 20px
        width 250px
        margin 0 auto
        transition background $time
        &:hover
            background-color $white

.fastivals
    margin-bottom 50px
    &__title
        text-transform uppercase
        text-align left
        font-weight 500
        font-size 34px
        margin-bottom 25px
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__list
        margin 0 -30px
        font-size 0
        text-align center
        +below($tablet)
            margin 0
    &__item
        position relative
        display inline-block
        vertical-align top
        max-height 400px
        margin 0 15px 12px
        width 30%
        +below($desktop)
            width 28%
        +below($tablet)
            width 100%
            margin 0 0 20px 0
    &__image
        & img
            width 100%
            display block
    &__link
        padding 20px 0 20px 25px
        text-align left
        position absolute
        color #fff
        background-color rgba(0, 0, 0, 0.45)
        bottom 0
        left 0
        font-size 16px
        width 100%
        z-index 1
        transition background $time
        &:hover
            background-color rgba(0, 0, 0, 0.8)

.experts-corner
    margin-bottom 50px
    +below($tablet)
        margin-bottom 25px
    &__title
        text-transform uppercase
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__top
        position relative
        margin-bottom 20px
    &__main-link
        font-size 20px
        position absolute
        top 50%
        left 50%
        transform translate(-50%, -50%)
        padding 10px 35px
        background-color $yellow
        transition background $time
        z-index 1
        &:hover
            background-color $white
    &__link
        font-size 16px
        position absolute
        bottom 0
        left 0
        padding 12px 25px
        background-color $yellow
        transition background $time
        z-index 1
        &:hover
            background-color $white
    &__left
        position relative
        float left
        width 50%
    &__right
        position relative
        float right
        width 50%
    &__right
    &__left
        +below($tablet)
            float none
            width 100%
    &__bg-full
        min-height 350px
        max-height 750px
        overflow hidden
    &__bg-full
    &__bg-mini
        & img
            width 100%
            display block
            object-fit cover
    &__bg-mini
        margin 12px

.instagram-media
    margin-bottom 50px
    &__top
        clearfix()
        margin-bottom 10px
    &__title
        font-size 20px
        text-transform uppercase
    &__left
        float left
        width 80%
        +below($tablet)
            width 50%
            display none
    &__right
        float right
        width 20%
        text-align right
        +below($tablet)
            width 100%
    &__link
        font-size 15px
        text-transform uppercase
        padding-left 35px
    &__instagram
        position relative
        &::before
            content ''
            position absolute
            display block
            top 0
            left 0
            height 24px
            width 24px
            background url('../img/instagram.png') 50% no-repeat
            z-index 1
    &__list
        font-size 0
        margin 0 -4px
    &__item
        display inline-block
        width 11.11%
        padding 0 4px
        overflow hidden
        +below($tablet)
            width 25%
        & img
            width 100%
            display block
            transition transform $time
        &:hover img
            transform scale(1.1)
