// ====== Базовые подключения
@import 'components/_base/_variables'
@import 'components/_base/_mixins'

@import 'components/_base/page'

// ====== Все компоненты
@import 'components/*'

// ====== Вёрстка

.logo
    width 100%
    img
        display block
        width 100%

/*!
Делает в одну строку
*/
.social-share
    &.inline .ya-share2__item
        display inline-block
        vertical-align top
        margin-right 12px
        &:last-child
            margin-right 0
/*!
Стили для социальных иконок
*/
.ya-share2__item
    font-size 0
    width 24px
    height 24px
    cursor pointer
    &_service
        &_facebook
            background url('../img/sprites.png') -10px -10px no-repeat
            &:hover
                background: url('../img/sprites.png') -98px -54px no-repeat
        &_twitter
            // width 23px
            // height 23px
            background url('../img/sprites.png') -53px -98px no-repeat
            &:hover
                background: url('../img/sprites.png') -98px -10px no-repeat
        &_whatsapp
            // width 23px
            // height 23px
            background url('../img/sprites.png') -142px -53px no-repeat
            &:hover
                background: url('../img/sprites.png') -142px -96px no-repeat
        &_vkontakte
            // width 23px
            // height 23px
            background url('../img/sprites.png') -96px -98px no-repeat
            &:hover
                background: url('../img/sprites.png') -142px -10px no-repeat
        &_odnoklassniki
            // width 24px
            // height 24px
            background url('../img/sprites.png') -54px -10px no-repeat
            &:hover
                background: url('../img/sprites.png') -10px -54px no-repeat
        &_telegram
            // width 24px
            // height 24px
            background url('../img/sprites.png') -54px -54px no-repeat
            &:hover
                background: url('../img/sprites.png') -10px -98px no-repeat

.main-slider
    margin-bottom 50px
    &__item
        position relative
        height 600px
        width 100%
        +below($tablet)
            height 450px
        & img
            width 100%
            height 100%
            display block
            object-fit cover
            position absolute
            top 0
            left 0
            z-index 1
    &__info
        position absolute
        left 20%
        bottom 3px
        font-size 0
        z-index 2
        background-color rgba(248, 248, 248, 0.60)
        padding 20px 32px
        max-width 650px
        +below($desktop)
            left 5%
        +below($tablet)
            left 1%
    &__title
        font-size 32px
        font-weight 500
        text-transform uppercase
        text-decoration underline
        margin-bottom 12px
        +below($desktop)
            font-size 27px
        +below($tablet)
            font-size 23px
    &__text
        font-size 18px
        margin-bottom 6px
        +below($desktop)
            font-size 16px
        +below($tablet)
            font-size 15px
/*!
    Стлизация Dots
*/
.main-slider .owl-theme .owl-dots .owl-dot span
    width 20px
    height 15px


.hero-info
    margin-bottom 80px
    +below($desktop)
        margin-bottom 45px
    +below($tablet)
        margin-bottom 25px
    &__title
        font-size 38px
        font-weight 500
        text-align center
        margin-bottom 12px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__description
        font-size 18px
        line-height 1.7
        text-align center
        +below($desktop)
            font-size 16px

.our-team
    margin-bottom 50px
    +below($tablet)
        margin-bottom 25px
    &__title
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__list
        font-size 0
        margin 0 -10px
        text-align center
    &__item
        display inline-block
        width 24%
        margin 0 5px 12px
        overflow hidden
        position relative
        &:hover .our-team__phone-email
            left 0
        +below($desktop)
            width 23%
        +below($tablet)
            width 100%
            margin 0 0 15px 0
    &__image
        & img
            width 100%
            display block
    &__block-info
        padding-top 12px
        padding-bottom 12px
        background-color $white
        text-align center
        +below($tablet)
            padding 6px 0
    &__name
        font-size 17px
        margin-bottom 6px
        +below($tablet)
            font-size 16px
    &__info
        text-transform uppercase
        font-size 16px
    &__phone-email
        position absolute
        top 0
        left -100%
        width 100%
        height 100%
        padding-top 50%
        z-index 1
        background-color rgba(248,248,248,.8)
        transition left $time
    &__phone
        margin-bottom 15px
    &__phone
    &__email
        display block
        font-size 20px
        &:hover
            text-decoration underline


/*!
    Video slider
*/
.our-video
    margin-bottom 50px
    +below($tablet)
        margin-bottom 25px
    &__title
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__item
        height 325px
        +below($desktop)
            height 190px
    &__link + span
        display none

.owl-video-tn
    background-size cover !important

.our-advantages
    margin-bottom 50px
    +below($tablet)
        margin-bottom 25px
    &__title
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__list
        font-size 0
        margin 0 -10px
        +below($tablet)
            margin 0
    &__grid-item
        display inline-block
        width 24%
        margin 0 5px 12px
        vertical-align top
        +below($desktop)
            width 31%
            &.delet
                display none
        +below($tablet)
            width 100%
            margin 0
    &__item
        border-bottom 1px solid
        margin-bottom 25px
        +below($tablet)
            margin-bottom 12px
    &__image
        text-align center
        margin-bottom 12px
    &__info-block-mini
        margin-bottom 12px
    &__open
        font-family "oswald"
        outline 0
        border 0
        cursor pointer
        background-color $yellow
        font-size 16px
        padding 4px 6px
        margin-bottom 12px
        margin-left 12px
        transition background $time
        &:hover
            background-color $white
    &__info-block-full
        overflow hidden
    &__info-mini
        padding 0 12px
        font-size 16px
    &__info
        padding 0 12px
        font-size 16px
        margin-top -9999px
        transition all $time
.our-advantages__item.is-opened .our-advantages__info
    margin-top 0 !important

.tours
    margin-bottom 50px
    &__title
        text-transform uppercase
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
    &__list
        margin 0 -30px
        font-size 0
        text-align center
        +below($tablet)
            margin 0
    &__item
        display inline-block
        vertical-align top
        margin 0 15px 12px
        width 22%
        transition background $time, box-shadow $time, transform $time
        &:hover
            background #ffefc6
            box-shadow 0 4px 20px 15px #c7c7c7
            transform scale(1.02)
        +below($desktop)
            width 20%
        +below($tablet)
            width 100%
            margin 0 0 20px 0
    &__image img
        width 100%
        display block
        object-fit cover
    &__info
        font-size 16px
        text-align center
        padding 12px 0 0 0
        margin-bottom 6px
    &__open-full
        font-family "oswald"
        outline 0
        border 0
        cursor pointer
        background-color $yellow
        font-size 16px
        padding 4px 6px
        width 100%
        transition background $time
        &:hover
            background-color $white

.popular-tours
    margin-bottom 50px
    &__title
        text-transform uppercase
        text-align center
        font-weight 500
        font-size 34px
        margin-bottom 25px
        background-color $yellow
        padding 35px 0
        +below($desktop)
            font-size 28px
            padding 20px 0
        +below($tablet)
            font-size 20px
